<div class="main-card mb-3 card">
  <div class="card-header">
      <h3 class="card-title">Registro</h3>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :nombre, "Nombre(s)", class: 'form-label' %><br />
        <%= f.text_field :nombre, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :apellido_paterno, "Apellido paterno", class: 'form-label' %><br />
        <%= f.text_field :apellido_paterno, class: 'form-control' %>
      </div>
      
      <div class="field">
        <%= f.label :apellido_materno, "Apellido materno", class: 'form-label' %><br />
        <%= f.text_field :apellido_materno, class: 'form-control' %>
      </div>


      <div class="field">
        <%= f.label :email, "Correo electr칩nico", class: 'form-label' %><br />
        <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password, "Contrase침a", class: 'form-label' %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirmar contrase침a", class: 'form-label' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :rfc, "RFC", class: 'form-label' %><br />
        <%= f.text_field :rfc, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :nombre_empresa, "Nombre de empresa", class: 'form-label' %><br />
        <%= f.text_field :nombre_empresa, class: 'form-control' %>
      </div>

      <br />

      <div class="actions">
        <%= f.submit "Enviar", class: 'btn btn-primary float-end' %>
      </div>
      
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>


<script>
  $("#new_persona").validate({
    rules: {
      "persona[nombre]" : {
        required: true
      },
      "persona[apellido_materno]" : {
        required: true
      },
      "persona[apellido_paterno]" : {
        required: true
      },
      "persona[email]": {
        required: true,
        email: true
      },
      "persona[password]" : {
        required: true,
        minlength: <%= @minimum_password_length %>
      },
      "persona[password_confirmation]" : {
        required: true,
        equalTo : "#persona_password"
      },
      "persona[rfc]" : {
        required: true,
        minlength: 12,
        maxlength: 13
      },
      "persona[nombre_empresa]" : {
        required: true,
      }
    },
    submitHandler: function(form) {
      var AUTH_TOKEN = $('meta[name=csrf-token]').attr('content');
       $.ajax({
        type: 'POST',
        url: '<%=verificar_empresa_path%>',
        data: {
          authenticity_token: AUTH_TOKEN,
          nombre_empresa: $('#persona_nombre_empresa').val(),
        },
        success: function(data){
          console.log(data);
          if(data){
            form.submit();
          }else{
            alert('Ya existe una empresa registrada con ese correo electr칩nico o rfc');
          }
        },
        error: function(xhr){
          console.log(xhr.responseText);
        },
      });
      return false;
    }
  });
</script>