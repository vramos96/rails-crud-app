<h2>Registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nombre, "Nombre(s)" %><br />
    <%= f.text_field :nombre %>
  </div>

  <div class="field">
    <%= f.label :apellido_materno, "Apellido materno" %><br />
    <%= f.text_field :apellido_materno %>
  </div>

  <div class="field">
    <%= f.label :apellido_paterno, "Apellido paterno" %><br />
    <%= f.text_field :apellido_paterno %>
  </div>

  <div class="field">
    <%= f.label :email, "Correo electr칩nico" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "Contrase침a" %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar contrase침a" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :rfc, "RFC" %><br />
    <%= f.text_field :rfc %>
  </div>

  <div class="field">
    <%= f.label :nombre_empresa, "Nombre de empresa" %><br />
    <%= f.text_field :nombre_empresa %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<script>
  $("#new_persona").validate({
    rules: {
      "persona[nombre]" : {
        required: true
      },
      "persona[apellido_materno]" : {
        required: true
      },
      "persona[apellido_paterno]" : {
        required: true
      },
      "persona[email]": {
        required: true,
        email: true
      },
      "persona[password]" : {
        required: true,
        minlength: <%= @minimum_password_length %>
      },
      "persona[password_confirmation]" : {
        required: true,
        equalTo : "#persona_password"
      },
      "persona[rfc]" : {
        required: true,
        minlength: 12,
        maxlength: 13
      },
      "persona[nombre_empresa]" : {
        required: true,
      }
    },
    submitHandler: function(form) {
      var AUTH_TOKEN = $('meta[name=csrf-token]').attr('content');
       $.ajax({
        type: 'POST',
        url: '<%=verificar_empresa_path%>',
        data: {
          authenticity_token: AUTH_TOKEN,
          nombre_empresa: $('#persona_nombre_empresa').val(),
        },
        success: function(data){
          console.log(data);
          if(data){
            form.submit();
          }else{
            alert('Ya existe una empresa registrada con ese correo electr칩nico o rfc');
          }
        },
        error: function(xhr){
          console.log(xhr.responseText);
        },
      });
      return false;
    }
  });
</script>