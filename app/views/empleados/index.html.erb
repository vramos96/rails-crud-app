<div class="main-card mb-3 card">
  <div class="card-header">
    <h3 class="card-title">Empleados</h3>
  </div>
  <div class="card-body">
    <% if @empleados.count >= 0%>
      <table id="empleados_table" class="table table-hover">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>RFC</th>
            <th>Nombre del puesto</th>
            <th>Sucursal</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @empleados.each do |empleado| %>
            <tr>
              <td><%= empleado.nombre %></td>
              <td><%= empleado.rfc %></td>
              <td><%= empleado.nombre_puesto %></td>
              <td><%= empleado.sucursal %></td>
              <td><%= link_to 'Show', empleado %></td>
              <td><%= link_to 'Edit', edit_empleado_path(empleado) %></td>
              <td><%= link_to 'Destroy', empleado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <h4>
        No existen empleados registrados
      </h4>
    <% end %>
  </div>
</div>

<br>

<%= link_to "Registrar sucursal", new_empleado_path, class: 'btn btn-primary float-end' %> 
