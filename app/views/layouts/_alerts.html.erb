<% if notice %>
    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-success" role="alert">
                <%= simple_format(notice) %>
            </div>
        </div>
    </div>
<% end %>

<% if alert %>
    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-danger " role="alert">
                <%= simple_format(alert) %>
            </div>
        </div>
    </div>
<%end%>