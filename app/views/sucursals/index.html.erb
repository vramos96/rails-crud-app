<div class="main-card mb-3 card">
  <div class="card-header">
    <h3 class="card-title">Sucursales</h3>
  </div>
  <div class="card-body">
    <% if @sucursals.count > 0%>
          <table id="sucursals_table" class="table table-hover">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>NÃºmero de empleados</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @sucursals.each do |sucursal| %>
                <tr>
                  <td>
                    <%= sucursal.nombre %>
                  </td>
                  <td>
                    <%= sucursal.empleados.count %>
                  </td>
                  <td>
                    <%= link_to 'Ver', sucursal, class: 'btn btn-default' %>
                    <%= link_to 'Editar', edit_sucursal_path(sucursal), class: 'btn btn-secondary'  %>
                    <!--
                    <%= link_to 'Registrar empleado', new_empleado_path, class: 'btn btn-primary' %>
                    -->
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
      <script>
        $(document).ready(function() {
          $('#sucursals_table').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
            },
            "columnDefs": [{
              targets: -1,
              orderable: false
            }],
            "order": [0, 'desc']
          });
        });
      </script>
    <% else %>
      <h4>
        No existen sucursales registradas
      </h4>
    <% end %>
 </div>
</div>
<br />

<div class="float-end">
  <%= link_to "Registrar Sucursal", new_sucursal_path, class: 'btn btn-primary' %> 
  <%= link_to "Registrar Empleado", new_empleado_path, class: 'btn btn-primary' %> 
</div>

